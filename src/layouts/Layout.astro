                <defs> </defs>
                <g
                    id="Icons"
                    stroke="none"
                    stroke-width="1"
                    fill="none"
                    fill-rule="evenodd"
                >
                    <g
                        id="Color-"
                        transform="translate(-700.000000, -360.000000)"
                        fill="#fff"
                    >
