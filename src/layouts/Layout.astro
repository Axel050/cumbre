---
import "../styles/global.css";
import icon from "../assets/iconok.png";
import { Image } from "astro:assets";

interface Props {
    title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/svg+xml" href="/iconCI.png" />
        <meta name="generator" content={Astro.generator} />

        <!-- SEO Primario -->
        <title>{title} | Desarrollo de Software a Medida</title>
        <meta
            name="description"
            content="Especialistas en desarrollo de software desde cero. Creamos sistemas 100% personalizados, sitios web exclusivos y soluciones de correo corporativo para tu negocio."
        />
        <meta
            name="keywords"
            content="desarrollo software argentina, sistemas web a medida, desarrollo desde cero, cumbreit, software personalizado, emails corporativos"
        />
        <link rel="canonical" href="https://cumbreit.com.ar/" />
        <meta name="robots" content="index, follow" />

        <!-- Open Graph / Facebook -->
        <meta property="og:type" content="website" />
        <meta property="og:url" content="https://cumbreit.com.ar/" />
        <meta
            property="og:title"
            content="CumbreIT | Desarrollo de Software 100% a Medida"
        />
        <meta
            property="og:description"
            content="Dejamos de lado las plantillas para crear software artesanal diseñado exclusivamente para tu empresa."
        />
        <meta
            property="og:image"
            content="https://cumbreit.com.ar/og-image.png"
        />

        <!-- Twitter -->
        <meta property="twitter:card" content="summary_large_image" />
        <meta property="twitter:url" content="https://cumbreit.com.ar/" />
        <meta
            property="twitter:title"
            content="CumbreIT | Desarrollo de Software 100% a Medida"
        />
        <meta
            property="twitter:description"
            content="Dejamos de lado las plantillas para crear software artesanal diseñado exclusivamente para tu empresa."
        />
        <meta
            property="twitter:image"
            content="https://cumbreit.com.ar/og-image.png"
        />
    </head>
    <body class="bg-cumbre-navy text-white min-h-screen flex flex-col">
        <header
            class="fixed w-full top-0 z-50 bg-cumbre-navy/80 backdrop-blur-md border-b border-white/10"
        >
            <nav
                class="container mx-auto md:px-6 px-4 py-2 flex justify-between items-center"
            >
                <a
                    href="#"
                    class="md:text-2xl text-xl font-bold flex justify-center items-center boder border-cyan-800 rounded-lg md:pl-3 pl-1 md:pr-4 pr-2 shadow shadow-cyan-800"
                >
                    <Image
                        src={icon}
                        alt="Digital Mountains"
                        loading="eager"
                        class="md:w-20 w-15 h-auto my-0 p-0 m-0 h-fit"
                    />

                    <span class="tracking-tighter"
                        >Cumbre<span class="text-cumbre-cyan">IT</span></span
                    >
                </a>
                <div
                    class="hidden md:flex gap-8 text-sm font-medium text-gray-300"
                >
                    <a
                        href="#servicios"
                        class="hover:text-cumbre-cyan transition-colors"
                        >Servicios</a
                    >
                    <a
                        href="#proyectos"
                        class="hover:text-cumbre-cyan transition-colors"
                        >Proyectos</a
                    >
                    <a
                        href="#nosotros"
                        class="hover:text-cumbre-cyan transition-colors"
                        >Nosotros</a
                    >
                    <a
                        href="#contacto"
                        class="hover:text-cumbre-cyan transition-colors"
                        >Contacto</a
                    >
                </div>
                <a
                    href="#contacto"
                    class="hidden md:block bg-cumbre-cyan/10 hover:bg-cumbre-cyan/20 text-cumbre-cyan font-bold py-2 px-6 rounded-full border border-cumbre-cyan/50 transition-all hover:shadow-[0_0_15px_rgba(6,182,212,0.3)]"
                >
                    Iniciar Proyecto
                </a>
            </nav>
        </header>

        <main class="flex-grow md:pt-20 pt-10">
            <slot />
        </main>

        <footer class="bg-slate-900 border-t border-white/5 py-12 mt-20">
            <div
                class="container mx-auto px-6 text-center text-gray-400 text-sm"
            >
                <p>
                    &copy; {new Date().getFullYear()} CumbreIT. Todos los derechos
                    reservados.
                </p>
                <p class="mt-2 text-gray-500">
                    Sistemas robustos y diseño exclusivo de alto impacto.
                </p>
            </div>
        </footer>

        <!-- WhatsApp Floating Button -->
        <a
            href="https://wa.me/5491162841353?text=Hola,%20quiero%20hablar%20sobre%20un%20sistema%20a%20medida"
            target="_blank"
            rel="noopener noreferrer"
            aria-label="Contactar por WhatsApp"
            class="fixed bottom-6 right-6 z-[999]
    w-14 h-14 flex items-center justify-center
    rounded-full
    bg-gradient-to-br from-cumbre-cyan to-blue-400
    shadow-[0_0_25px_rgba(6,182,212,0.45)]
    transition-all duration-300 ease-out
    hover:scale-110 hover:shadow-[0_0_40px_rgba(6,182,212,0.65)]
    focus:outline-none focus:ring-2 focus:ring-cumbre-cyan"
        >
            <svg
                width="32px"
                height="32px"
                viewBox="0 0 48 48"
                version="1.1"
                xmlns="http://www.w3.org/2000/svg"
                xmlns:xlink="http://www.w3.org/1999/xlink"
