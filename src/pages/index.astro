<script>
  // Advanced Spotlight & Tilt Effect
  const cards = document.querySelectorAll(".service-card");

  cards.forEach((card) => {
    const htmlCard = card as HTMLElement;
    const glowElement = htmlCard.querySelector(".glow-element") as HTMLElement;

    // Initialize variables
    htmlCard.style.setProperty("--mouse-x", "0px");
    htmlCard.style.setProperty("--mouse-y", "0px");

    card.addEventListener("mousemove", (e) => {
      const rect = htmlCard.getBoundingClientRect();
      const mouseEvent = e as MouseEvent;

      // Calculate mouse position
      const x = mouseEvent.clientX - rect.left;
      const y = mouseEvent.clientY - rect.top;

      // Update CSS variables for other effects
      htmlCard.style.setProperty("--mouse-x", `${x}px`);
      htmlCard.style.setProperty("--mouse-y", `${y}px`);

      const centerX = rect.width / 2;
      const centerY = rect.height / 2;

      // Gentle 3D Tilt (Reduced angle for premium feel)
      const rotateX = ((y - centerY) / centerY) * -5; // Reduced from -10
      const rotateY = ((x - centerX) / centerX) * 5; // Reduced from 10

      // Apply transformation
      htmlCard.style.transform = `perspective(1000px) rotateX(${rotateX}deg) rotateY(${rotateY}deg) scale3d(1.02, 1.02, 1.02)`;

      // Spotlight Effect: Focused radial gradient
      if (glowElement) {
        glowElement.style.opacity = "1";
        // Two layers: A focused bright spot and a wider faint glow
        glowElement.style.background = `
                    radial-gradient(circle 100px at ${x}px ${y}px, rgba(6,182,212,0.25), transparent),
                    radial-gradient(circle 250px at ${x}px ${y}px, rgba(6,182,212,0.05), transparent)
                `;
      }
    });

    card.addEventListener("mouseleave", () => {
      // Reset with smooth transition
      htmlCard.style.transform =
        "perspective(1000px) rotateX(0) rotateY(0) scale3d(1, 1, 1)";

      if (glowElement) {
        glowElement.style.opacity = "0";
      }
    });
  });
</script>
